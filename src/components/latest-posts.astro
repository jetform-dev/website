---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";

// Filter blog entries with 'draft: false' & date before current date
const publishedBlogEntries = await getCollection("blog", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});

// Sort content entries by publication date
publishedBlogEntries.sort(function (a, b) {
  return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
});
---

<main class="mt-16">
  <hr />
  <div class="flex">
    <h3 class="text-2xl text-slate-600 font-semibold tracking-tight mb-16 mt-4">Kabar Terbaru</h3>
    <a href="/blog" class="ml-auto text-lg text-primary-500 mt-4"
      >Lihat Semua <span aria-hidden="true">→</span></a
    >
  </div>

  <ul class="grid gap-16 mx-auto">
    {
      publishedBlogEntries.slice(0, 2).map((entry, index) => (
        <li>
          <a href={`/blog/${entry.slug}`}>
            <div class="grid md:grid-cols-2 gap-5 md:gap-10 items-center">
              <Picture
                src={entry.data.image.src}
                alt={entry.data.image.alt}
                sizes="(max-width: 800px) 100vw, 800px"
                width={800}
                height={600}
                loading={index <= 2 ? "eager" : "lazy"}
                decoding={index <= 2 ? "sync" : "async"}
                class="w-full rounded-md object-cover object-center bg-white"
              />
              <div>
                <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
                  {entry.data.category}
                </span>
                <h2 class="text-3xl text-slate-700 font-semibold tracking-tight mt-1">
                  {entry.data.title}
                </h2>
                <p class="text-lg text-slate-500 tracking-tight mt-1">
                  {entry.data.snippet}
                </p>
                <div class="flex gap-2 mt-3">
                  <span class="text-gray-400">{entry.data.author}</span>
                  <span class="text-gray-400">• </span>
                  <time
                    class="text-gray-400"
                    datetime={entry.data.publishDate.toISOString()}>
                    {entry.data.publishDate.toDateString()}
                  </time>
                </div>
              </div>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</main>
