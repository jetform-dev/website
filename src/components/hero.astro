---
import { Picture } from "astro:assets";
import Link from "@components/ui/link.astro";
// import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 order-1 md:block">
    <Picture
      src="/hero.png"
      width={800}
      height={600}
      alt="JetForm - Solusi pintar menjual produk digital"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl text-slate-700 font-bold lg:tracking-tight xl:tracking-tighter">
      Solusi pintar <span class="text-primary-500"
        >menjual produk digital<i>!</i></span
      >
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      <strong>Toko online auto-pilot</strong> khusus produk digital. Memproses pesanan,
      memvalidasi pembayaran hingga mengirimkan produk, semua otomatis dan <i
        >real-time</i
      >.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://app.jetform.me/signup?utm_source=hero-signup-cta&utm_medium=website"
        id="hero-signup-cta"
        data-umami-event="hero-signup-cta"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <!-- <Icon class="text-white w-5 h-5" name="bx:bxs-cloud-download" /> -->
        Daftar Sekarang <span aria-hidden="true">â†’</span>
      </Link>
      <Link
        size="lg"
        style="outline"
        href="/demo"
        class="flex gap-1 items-center justify-center">
        Coba Demo
      </Link>
    </div>
  </div>
</main>
