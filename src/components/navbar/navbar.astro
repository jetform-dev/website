---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import { Picture } from "astro:assets";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  // {
  //   title: "Features",
  //   path: "#",
  //   children: [
  //     { title: "Action", path: "/" },
  //     { title: "Another action", path: "#" },
  //     { title: "Dropdown Submenu", path: "#" },
  //     { title: "404 Page", path: "/404" },
  //   ],
  // },
  // {
  //   title: "Demo",
  //   path: "/demo",
  //   badge: true,
  // },
  {
    title: "Harga",
    path: "/harga",
  },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Tentang",
    path: "/tentang",
  },
  {
    title: "Kontak",
    path: "/kontak",
  },
];
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center px-6 py-3 border-b">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a
          href="/"
          class="text-lg"
          id="navbar-logo"
          data-umami-event="navbar-logo">
          <Picture
            src="/logo.png"
            alt="JetForm logo"
            width={85}
            height={32}
            loading="eager"
            format="avif"
          />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-primary-500 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          <Link
            href="https://app.jetform.me/signin?utm_source=navbar-signin-link-m&utm_medium=website"
            id="navbar-signin-link-m"
            data-umami-event="navbar-signin-link-m"
            size="md"
            block
            rel="noopener">
            Dashboard
          </Link>
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        <Link
          href="https://app.jetform.me/signin?utm_source=navbar-signin-link&utm_medium=website"
          id="navbar-signin-link"
          data-umami-event="navbar-signin-link"
          size="md"
          rel="noopener">
          Dashboard <span aria-hidden="true">â†’</span>
        </Link>
      </div>
    </div>
  </header>
</Container>
